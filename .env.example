# ==========================
# IDS Log Viewer - Environment Configuration
# ==========================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ==========================
# Database Configuration (MySQL)
# ==========================
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=ids_logs
MYSQL_USER=ids_user
MYSQL_PASSWORD=your_secure_password

# ==========================
# Backend Configuration
# ==========================
DB_USER=ids_user
DB_PASS=your_secure_password
DB_HOST=db
DB_PORT=3306
DB_NAME=ids_logs

# Path to Suricata eve.json log file (inside container)
LOG_FILE=/app/logs/eve.json

# ==========================
# Authentication & Security
# ==========================
# IMPORTANT: Generate a strong secret key for production!
# Use: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=change-this-in-production-use-256-bit-key

# Default admin credentials (created on first startup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password
